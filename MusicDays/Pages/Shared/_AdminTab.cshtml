@using Microsoft.AspNetCore.Identity
@using MusicDays.Models;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<style>
    .dropbtn {
        color: black;
        padding: 16px;
        font-size: 16px;
        border: none;
        cursor: pointer;
        margin-left: 10em;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
        margin-left: 10em;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #f1f1f1
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }
</style>

@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin") )
{
    <div class="dropdown p-3">
        <a class="dropbtn" asp-page="/Admin/Index"><span>For Admins Only</span></a>
        <div class="dropdown-content">
            <a class="nav-link" asp-area="" asp-page="/Roles/Index">Manage Roles</a>
            <a class="nav-link" asp-area="" asp-page="/Audits/Index">Logs</a>
            <hr />
        </div>
    </div>
}
